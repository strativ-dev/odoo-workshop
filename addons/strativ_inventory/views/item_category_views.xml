<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inventory_category_action" model="ir.actions.act_window">
        <field name="name">Create</field>
        <field name="res_model">inventory.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="inventory_category_view_tree" model="ir.ui.view">
        <field name="name">inventory_category.view.tree</field>
        <field name="model">inventory.category</field>
        <field name="arch" type="xml">
            <tree string="Inventory Categories">
                <field name="type" string="Category"/>
            </tree>
        </field>
    </record>

    <record id="inventory_category_view_form" model="ir.ui.view">
        <field name="name">inventory_category.view.form</field>
        <field name="model">inventory.category</field>
        <field name="arch" type="xml">
            <form string="Create Category">
                <sheet>
                    <group>
                        <field name="type" string="Category Name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
